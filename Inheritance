class Polygon:
    def _init_(self, no_of_sides):
        self.n = no_of_sides
        self.sides = [0 for j in range(no_of_sides)]

    def inputSides(self):
        self.sides = [float(input("Enter side "+str(i+1)+" : ")) for j in range(self.n)]

    def dispSides(self):
        for j in range(self.n):
            print("Side",j+1,"is",self.sides[j])
